{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/jsx-runtime",
    "plugin:react/recommended",
    "plugin:jest/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react", "jest"],
  "rules": {
    "react/react-in-jsx-scope": "error",
    "react/jsx-uses-react": "error",
    "react/prop-types": 0,
    "react/display-name": "off"
  },
  "ignorePatterns": [
    "src/img/castelmezzano.png",
    "**/**.css",
    "src/components/Sprite/Sprite.js"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
